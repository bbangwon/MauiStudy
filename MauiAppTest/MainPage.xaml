<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTest.MainPage">
    <VerticalStackLayout Margin="15" Padding="30,60,30,30">
        <Label x:Name="lblGesture" Text="Username" TextColor="Black" FontSize="42" FontAttributes="Bold, Italic">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"
                                      NumberOfTapsRequired="2" />
            </Label.GestureRecognizers>
        </Label>
        <Button x:Name="EventButton" Text="Event" />
        <Button x:Name="EventButton2" Text="XamlEvent" Clicked="EventButton_Clicked" />
    </VerticalStackLayout>
</ContentPage>
